        {{/each}}
    
        <select class="form-control" name="musculo" id="musculo">
            {{#each musculos}}
               <option value="{{nome}}">{{nome}}</option>
            {{else}}

            {{/each}}
        </select> <br>
        <select class="form-control" name="musculo1" id="musculo1">
            {{#each musculos}}
               <option value="{{nome}}">{{nome}}</option>
            {{else}}

            {{/each}}
        </select> <br>
        <select class="form-control" name="musculo2" id="musculo2">
            {{#each musculos}}
               <option value="{{nome}}">{{nome}}</option>
            {{else}}

            {{/each}}
        </select> <br>
        <button type="submit" class="btn btn-secondary">Escolher musculos</button>
    </form>   
</div>
    
 
 